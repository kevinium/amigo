<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>TeamsKev</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
	 
	<script src="/socket.io/socket.io.js"></script>
	<link rel="stylesheet" href="/styleChat.css">
	
	<!-- <script src="peerjs.js"></script> -->
	<script src="https://kit.fontawesome.com/81ecc7f502.js" crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	
	<script>
		const ROOM_ID = "<%= roomId %>";
		const USER_NAME = "<%= user.name %>";
		// const USER_GIVEN_NAME = "<%= user.given_name %>";
		// const USER_FAMILY_NAME = "<%= user.family_name %>";
		// const USER_NICKNAME = "<%= user.nickname %>";
		// const USER_PICTURE_URL = "<%= user.picture %>";
		const USER_EMAIL = "<%= user.email %>";
		const USER_UID = "<%= userUID %>";

		// const USER_SUB = "<%= user.sub %>";

	</script>
</head>
<body>
	<div id="main">
		<div id="main__left">
			<div id="logo_holder"  id="homeButton">
				<img onclick="location.href='/home';" src="/logoamigo.png">
			</div>
			<div id="main__left__button_bar">
				
				
				<div onclick="location.href='/<%= roomId %>';" id="main__left__new_schedule__button">
					<i class="fas fa-plus-circle"></i>
					<span>New Meeting</span>
				</div>
				<div onclick="location.href='/schedule/<%=roomId%>';" id="main__left__new_schedule__button">
					<i class="fas fa-clock"></i>
					<span>Schedule Meeting</span>
				</div>
			
			</div>
			<div id="main__left__group_bar">
				<% if(members.length == 0) { %>
				<span> <i>Empty Group</i> </span>
				<%} else{ %>
				<span><%= members[0].group_name %></span>
				<%}%>
			</div>
			<div id="main__left__email_place">

				<% for (var i = 0; i < members.length; i++) { %>
				<div class="main__left__email">
					<i class="fas fa-user-circle"></i>
					<span><%= members[i].email %></span>
				</div>
				<%}%>
				
			</div>


		</div>
		<div id="main__right">
			<div class="main__chat_window">
				<ul class="messages">
					<% for (var i = 0; i < messages.length; i++) { %>
						<% if (messages[i].email == user.email){ %>
							<li class="message_sent"><b><%= messages[i].name %></b><br/><%= messages[i].message %></li>
						<%} else {%>
							<li class="message_received"><b><%= messages[i].name %></b><br/><%= messages[i].message %></li>
						<%}%>
					<%}%>

				</ul>
			</div>
			<div class="main__message_container">
				<% if(members.length > 0) { %>
				
				<input id="chat_message" type="text" placeholder="Type message here...">
				<%}%>
			</div>

		</div>
	</div>
	
	<script src = "/chatScript.js"></script>
</body>
</html>
